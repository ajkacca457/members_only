<!DOCTYPE html>
<html>
  <head>
    <title>Members</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "main" %>

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark position-fixed w-100 fixed-top">
      <a class="navbar-brand" href="#">
         <%= image_tag "members.png", width: "40" %>
    </a>
      <h2 class="text-white ">Secret Society</h2>
      <button class="navbar-toggler" type="button<" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <form class="form-inline my-2 my-lg-0 ml-auto">

          <% if user_signed_in? %>
          <%= link_to 'logOut', destroy_user_session_path, method: :delete, class:"mr-3 bg-danger text-white px-2 py-1 radius" %>
           <% else %>
          <%= link_to "Log in", new_user_session_path, class:"mr-3 bg-primary text-white px-2 py-1 radius" %>
          <%= link_to "Sign up", new_user_registration_path, class:"mr-3 bg-success text-white px-2 py-1 radius"  %>
           <% end %>

        </form>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
